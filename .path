#!/bin/bash

export PATH=/usr/local/bin:${PATH}:/sbin:/usr/local/sbin

#Python
PYTHON_PATH="/Library/Frameworks/Python.framework/Versions/3.9/bin"
PYTHON_PATH="${HOME}/Library/Python/3.9/bin:${PYTHON_PATH}"
PYTHON_PATH="${HOME}/Library/Python/3.9/lib/python/site-packages:${PYTHON_PATH}"
export PATH="${PYTHON_PATH}:${PATH}"

# Homebrew
export PATH="/opt/homebrew/bin:${PATH}"
export LIBRARY_PATH="/opt/homebrew/lib:${LIBRARY_PATH}"

# some custom scripts
export PATH=$PATH:${HOME}/Dev/mediaconversion
export PATH=$PATH:${HOME}/Dev/Plex
export PATH=$PATH:${HOME}/scripts
export PATH=$PATH:${HOME}/scripts/pushover
export PATH=$PATH:${HOME}/scripts/plex

# shellcheck source=/dev/null
if [ -r "/opt/homebrew/etc/profile.d/bash_completion.sh" ]; then . "/opt/homebrew/etc/profile.d/bash_completion.sh"; fi
